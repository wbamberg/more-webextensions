{

  "description": "Options page demo",
  "manifest_version": 2,
  "name": "options-demo",
  "version": "1.0",
  "icons": {
    "48": "icons/beasts-48.png"
  },

  "applications": {
    "gecko": {
      "id": "options-messaging@mozilla.org",
      "strict_min_version": "45.0.0"
    }
  },
  
  "background": {
    "scripts": ["background.js"]
  },
    
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  
  "browser_action": {
      "default_icon": "icons/beasts-32.png"
    }
}
